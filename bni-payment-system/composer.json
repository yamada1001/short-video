{
    "name": "yojitsu/bni-payment-system",
    "description": "BNI定例会費集金システム - Square Payment Links APIを使用したオンライン会費集金",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yojitsu",
            "email": "info@yojitu.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "square/square": "^30.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "BNI\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
