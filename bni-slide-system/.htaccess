# ====================================
# BNI Slide System - Security Settings
# ====================================

# -----------------
# Basic Authentication
# -----------------
# Exclude check-path.php from authentication
<Files "check-path.php">
  Satisfy Any
  Allow from all
</Files>

AuthType Basic
AuthName "BNI Slide System - Restricted Access"
# IMPORTANT: Change this path to absolute path on Xserver
# Example: /home/your_server_id/your_domain/public_html/bni-slide-system/.htpasswd
AuthUserFile /Users/yamadaren/Movies/claude-code-projects/yojitu.com/bni-slide-system/.htpasswd
Require valid-user

# -----------------
# Error Pages
# -----------------
ErrorDocument 401 "認証が必要です。ユーザー名とパスワードを入力してください。"
ErrorDocument 403 "アクセスが拒否されました。"
ErrorDocument 404 "ページが見つかりません。"

# -----------------
# PHP Settings
# -----------------
<IfModule mod_php.c>
  # Error handling
  php_flag display_errors Off
  php_flag log_errors On
  php_value error_log error.log

  # Upload limits
  php_value upload_max_filesize 10M
  php_value post_max_size 10M
  php_value max_execution_time 300
  php_value memory_limit 256M

  # Character encoding
  php_value default_charset UTF-8
  php_value mbstring.language Japanese
  php_value mbstring.internal_encoding UTF-8
</IfModule>

# -----------------
# Security Headers
# -----------------
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"

  # Prevent MIME sniffing
  Header set X-Content-Type-Options "nosniff"

  # XSS Protection
  Header set X-XSS-Protection "1; mode=block"

  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# -----------------
# File Protection
# -----------------
# Prevent access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|md)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Protect data directory (additional layer)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteRule ^data/ - [F,L]
</IfModule>

# -----------------
# Directory Listing
# -----------------
Options -Indexes

# -----------------
# Charset
# -----------------
AddDefaultCharset UTF-8

# -----------------
# MIME Types
# -----------------
AddType text/html .html .htm
AddType text/css .css
AddType text/javascript .js
AddType application/json .json
AddType text/csv .csv

# -----------------
# Compression (optional)
# -----------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# -----------------
# Browser Caching (optional)
# -----------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>
